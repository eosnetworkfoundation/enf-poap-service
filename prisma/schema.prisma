generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"] // for Docker compatibility
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id          String @id @default(cuid())
  name        String
  description String
  imageUrl    String
  users       User[] @relation("UserToTokens")
  creator     User  @relation("CreatorToTokens", fields: [creatorId], references: [id])
  creatorId   String
}

model User {
  id      String  @id @default(cuid())
  address String  @unique
  claimedTokens  Token[] @relation("UserToTokens")
  createdTokens Token[] @relation("CreatorToTokens")
}
